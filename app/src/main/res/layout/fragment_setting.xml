<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        layout="@layout/inc_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linerEditAccount"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bgr_item_hover_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/change_profile"
                android:textColor="#222222" />


            <TextView
                android:id="@+id/tvnVip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0"
                android:background="@drawable/bgr_customer_vip_icon"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="VIP"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imvProfile"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@drawable/ic_edt_username" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ecedf2" />

        <LinearLayout
            android:id="@+id/linerChangePass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bgr_item_hover_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/change_password"
                android:textColor="#222222" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@drawable/ic_edt_password" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ecedf2" />

        <LinearLayout
            android:id="@+id/linerChangeAvatar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bgr_item_hover_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/change_avatar"
                android:textColor="#222222" />

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="0"
                android:scaleType="centerCrop"
                android:src="@drawable/img_avatar_default" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ecedf2" />


    </LinearLayout>

    <Button
        android:id="@+id/btnLogout"
        style="@style/Button.Black"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0"
        android:padding="20dp"
        android:text="@string/sign_out"
        android:textStyle="bold" />
</LinearLayout>
