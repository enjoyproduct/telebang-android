<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="wrap_content">

    <com.inspius.coreapp.widget.InspiusTintableImageView
        android:id="@+id/imvIcon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        android:src="@drawable/ic_news_default"
        app:tint="@color/custom_icon_item_category_selector" />

    <TextView
        android:id="@+id/tvnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imvIcon"
        android:layout_toRightOf="@+id/imvIcon"
        android:gravity="center_vertical"
        android:text="Category Name"
        android:textColor="@color/text_category_name_selector"
        android:textSize="17sp" />
</RelativeLayout>